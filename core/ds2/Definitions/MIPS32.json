{
    // OABI32
    "namespace" : "MIPS",
    "register-sets" : {
        "gpr" : {
            "*" : {
                //
                // Common to all registers
                //
                "bit-size"              : 32,
                "encoding"              : "int",
                "format"                : "hex",

                "base-gdb-reg-number"       : 0,
                "base-ehframe-reg-number"   : 0,
                "base-dwarf-reg-number"     : 0
            },

            "r0"  : {
